{
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "module": "CommonJS",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "jsx": "react",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@context/*": ["src/context/*"],
      "@constants/*": ["src/constants/*"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@assets/*": ["src/assets/*"]
    }
  },
  "include": ["src"]
}
